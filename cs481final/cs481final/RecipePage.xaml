                                <Label Text="{Binding strIngredient12}" FontSize="{StaticResource ezFontSize}" />
                                <Label Text="{Binding strIngredient13}" FontSize="{StaticResource ezFontSize}" />
                                <Label Text="{Binding strIngredient14}" FontSize="{StaticResource ezFontSize}" />
                                <Label Text="{Binding strIngredient15}" FontSize="{StaticResource ezFontSize}" />
                                <Label Text="{Binding strIngredient16}" FontSize="{StaticResource ezFontSize}" />
