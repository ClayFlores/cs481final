<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cs481final.FoodPickPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Silver">
            <Entry Placeholder="What sounds good today?"
                   x:Name="itemToSearch"/>
            <Button Text="Search Food Recipes" 
                    BackgroundColor="OrangeRed"
                    Clicked="Find_Food_Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>